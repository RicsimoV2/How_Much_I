<CheckItem>
    adaptive_height: True

    MDCheckbox:
        group: root.group

    MDLabel:
        text: root.text
        adaptive_height: True
        padding_x: "12dp"
        pos_hint: {"center_y": .5}

MDFloatLayout:

    #Titolo
    MDLabel:
        id: title
        text: 'placeholder'
        halign: "center"
        pos_hint: {'center_x': 0.5, 'top': 1}
        size_hint_y: 0.2
        height: self.texture_size[1] + dp(24)

    #calendario
    MDButton:
        style: "elevated"
        pos_hint: {'center_x': .7, 'center_y': .9}
        on_release: app.show_date_picker()
        MDButtonIcon:
            icon: "calendar"
            pos_hint: {"center_x": .5, "center_y": .5}


    ScrollView:
        size_hint_y: None
        height: self.parent.height - dp(110)
        pos_hint: {'top': 0.8}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            padding: dp(16)

            MDDivider:
                size_hint_x: 1.
                pos_hint: {'center_x': .5, 'center_y': .5}

            #Dormire
            MDBoxLayout:
                size_hint_y: None
                height: dp(40)
                MDLabel:
                    text: "Ore dormite notte"
                    halign: "left"  

                MDLabel:
                    id: label_dormire
                    text: "0"  # Valore iniziale
                    size_hint_x: None
                    width: dp(40)
                              
                
                MDSlider:
                    id: dormire
                    step:1
                    value: 0
                    max: 12
                    on_value: label_dormire.text = str(int(self.value)) 
                    on_value: app.get_output(self,'dormire', *args)
                    MDSliderHandle:

                    MDSliderValueLabel: 



            MDDivider:
                size_hint_x: 1.
                pos_hint: {'center_x': .5, 'center_y': .5}

            #pisolino
            MDBoxLayout:
                size_hint_y: None
                height: dp(40)
                MDLabel:
                    text: "Pisolino"
                    halign: "left"
                MDCheckbox:
                    id: pisolino
                    size_hint: None, None
                    size: "48dp", "48dp"
                    on_active: app.get_output(self,'pisolino', *args)

            MDDivider:
                size_hint_x: 1.
                pos_hint: {'center_x': .5, 'center_y': .5}

